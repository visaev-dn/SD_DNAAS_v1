! Multi-VLAN Configuration for {{ local_leaf }} to {{ remote_leaf }}
! Generated by Network LAB Automation Framework

interface {{ port }}
  description {{ description }}
  switchport mode trunk
  {% for vlan in vlans %}
  switchport trunk allowed vlan {{ vlan }}
  {% endfor %}
  spanning-tree portfast trunk
  no shutdown

! VLAN configurations
{% for vlan in vlans %}
vlan {{ vlan }}
  name VLAN-{{ vlan }}-{{ local_leaf }}-{{ remote_leaf }}
{% endfor %}

! Interface VLAN configurations
{% for vlan in vlans %}
interface Vlan{{ vlan }}
  description VLAN {{ vlan }} interface
  no shutdown
{% endfor %} 